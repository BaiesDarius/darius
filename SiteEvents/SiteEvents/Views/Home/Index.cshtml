@{
    ViewBag.Title = "Home Page";
}
<div class="container">
    <div id="myCarousel" class="carousel slide" data-ride="carousel">
        <!-- Indicators -->
        <ol class="carousel-indicators">
            <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
            <li data-target="#myCarousel" data-slide-to="1"></li>
            <li data-target="#myCarousel" data-slide-to="2"></li>
        </ol>

        <!-- Wrapper for slides -->
        <div class="carousel-inner">
            <div class="item active">
                <img src=@Url.Content("~/Images/concert1.jpg") style="width:100%;">
                <div class="carousel-caption">
                    <h3>Concerts</h3>
                    <p>Subscribe now to your favorite concerts.</p>
                </div> 
            </div>

            <div class="item">
                <img src=@Url.Content("~/Images/techv2.jpg") style="width:100%;">
                <div class="carousel-caption">
                    <h3>Tech Meetups</h3>
                    <p>Now you can search for them and join as you wish.</p>
                </div>
            </div>

            <div class="item">
                <img src=@Url.Content("~/Images/moviesv2.jpg") style="width:100%;">
                <div class="carousel-caption">
                    <h3>Movies</h3>
                    <p>Don't forget to tell your friends about them.</p>
                </div>
            </div>
        </div>

        <!-- Left and right controls -->
        <a class="left carousel-control" href="#myCarousel" data-slide="prev">
            <span class="glyphicon glyphicon-chevron-left"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="right carousel-control" href="#myCarousel" data-slide="next">
            <span class="glyphicon glyphicon-chevron-right"></span>
            <span class="sr-only">Next</span>
        </a>
    </div><br /><br /><br /><br /><br /><br />
    <style>
        /* Add a dark background color to the footer */
        footer {
            background-color: #2d2d30;
            color: #f5f5f5;
            padding: 32px;
        }

            footer a {
                color: #f5f5f5;
            }

                footer a:hover {
                    color: #777;
                    text-decoration: none;
                }
    </style>

    <footer class="text-center">
        <p>Website made by Darius Baies with the help of <a href="https://www.pentalog.ro/">Pentalog Software Company</a></p>
    </footer>

    <script>
$(document).ready(function(){
    // Initialize Tooltip
    $('[data-toggle="tooltip"]').tooltip();
})
    </script>
</div>
