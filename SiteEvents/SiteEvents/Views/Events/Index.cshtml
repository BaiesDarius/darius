@model IEnumerable<RequestWorkflow.Models.Event>

@{
    ViewBag.Title = "Index";
}

<h2>Events</h2>
@if (User.Identity.IsAuthenticated)
{
    <p>
        @Html.ActionLink("Create New", "Create", null, new { @class = "btn btn-danger btn-sm" })
    </p>
}
else
{
    <p>Login to view more details about events.</p>
}

<div class="container">
    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-md-3" style="margin:10px">
                @Html.DisplayNameFor(model => model.EventName)
                @Html.DisplayFor(modelItem => item.EventName)
                <br />

                @Html.DisplayNameFor(model=>model.Location)
                @Html.DisplayFor(modelItem => item.Location)
                <br />

                @Html.DisplayNameFor(model=>model.EventDate)
                @Html.DisplayFor(modelItem => item.EventDate)


                @if (User.Identity.IsAuthenticated)
                {
                    <br />
                    @*@Html.ActionLink("Edit", "Update", new { id = item.Id })*@
                    @Html.ActionLink("Details", "Details", new { id = item.Id }, new { @class = "btn btn-info btn-sm" })
                    @*@Html.ActionLink("Delete", "Delete", new { id = item.Id })*@
                    <br />
                    <button class="btn btn-danger btn-sm subscribeButton">Subscribe</button>
                    <a href="~/Comments" class="btn btn-primary btn-sm" role="button">Comments</a>
                    @*@Html.ActionLink("Comments", "Comments", new { id = item.Id })*@
                
                }
            </div>
        }
    </div>
</div>


